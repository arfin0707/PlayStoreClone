<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForYou.ForYouFragment"
    android:id="@+id/main"
    android:background="#f9f9f9"
    >

    <!-- Added ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Recommended for you"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:textColor="#494949"

                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:background="#f9f9f9"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:listitem="@layout/foryou_customlayout"
                >
            </androidx.recyclerview.widget.RecyclerView>

            <!--
                    rv2
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="-70dp"
                    >

                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="In everyone's hands"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:textColor="#494949"

                        />
                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="Downlaod the games"
                        android:textSize="14dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:textColor="#494949"

                        />
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:background="#f9f9f9"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_prermium"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:listitem="@layout/children_customlayout"
                >
            </androidx.recyclerview.widget.RecyclerView>


            <!--
            rv2
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Communication"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:textColor="#494949"

                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:background="#f9f9f9"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:listitem="@layout/foryou_customlayout"
                >
            </androidx.recyclerview.widget.RecyclerView>

            <!--
            rv3
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Video Chatting"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:textColor="#494949"

                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:background="#f9f9f9"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv3"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:listitem="@layout/foryou_customlayout"
                >
            </androidx.recyclerview.widget.RecyclerView>
            <!--
             rv4
     -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Popular apps"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:textColor="#494949"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:background="#f9f9f9"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_topchart"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:listitem="@layout/foryou_customlayout3"
                >
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </ScrollView> <!-- Changed: Added ScrollView -->

</FrameLayout>