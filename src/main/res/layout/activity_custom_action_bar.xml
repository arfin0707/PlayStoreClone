<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="15dp"
    >

    <!-- Logo or Icon on the left side -->
    <ImageView
        android:id="@+id/custom_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/play_icon"
        android:contentDescription="Logo" />

    <!-- Title TextView in the center -->
<!--    <TextView
        android:id="@+id/custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Custom Title"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />-->

    <!-- Optional: Right-side action button -->
    <ImageView
        android:id="@+id/custom_action_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="240dp"
        android:src="@drawable/bell"
        android:contentDescription="Action"
        android:clickable="true"
        android:padding="8dp"

        />


    <!-- Optional: Right-side action button -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_action_button2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/profile"
        android:contentDescription="Action"
        android:clickable="true"

        />



</LinearLayout>